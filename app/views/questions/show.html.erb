<div class="small-12 column white-marble">
  <h2> <%= @question.body %> </h2>
  <div class="left" style="color:#555555">
    posted by <%= @question.user.name %> on <%= @question.created_at %>
  </div>
  <div class="right">
    <%= link_to "Chat with #{@question.user.first_name}", "#",
    class: "btn btn-success btn-xs start-conversation button success round",
    "data-sid" => current_user.id, "data-rip" => @question.user.id %>
  </div>
</div>
<div class="small-12 column white-marble">
  <div class="panel">
    <%= markdown(@question.description) %>
  </div>
</div>
