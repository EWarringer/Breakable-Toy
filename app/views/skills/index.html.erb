<div class="small-3 column">
  <div class="side-bar" style="text-align:center;">
    <img class="fl-img-sidebar" src="http://i.imgur.com/SjSTIWz.png"
    alt="freeLanswers" style="width:250px;height:70px;">
    <div style="margin-left: 0px; padding-top: 20px; font-size: 20pt;">
      <%= link_to "Home", root_path, {style: 'color: black;
        border-bottom-style: solid; border-bottom-width: 1px;'} %>  |
      <%= link_to "Profile", user_path(current_user.id),
      {style:'color: black; border-bottom-style: solid;
        border-bottom-width: 1px;'} %>
    </div>
  </div>
  <div class="white-marble" style="background:white;" id="ajax-call">
    <section class="block-list">
      <div id="profilelist">
        <h3>Your Skills</h3>
        <ul id="ajax-list" style="font-size: 16pt">
          <% @userskills.each do |userskill| %>
          <li><%= userskill.skill.name %></li>
          <% end %>
        </ul>
      </div>
    </section>
  </div>
</div>

<div class="small-9 question-title white-marble" style="margin-left: 250px;background:white;">
  Select your skills below
</div>
<div class="small-9 column white-marble" style="background:white;">
  <div class="row">
    <div>
      <ul class="accordion" data-accordion role="tablist">
        <% @categories.each do |category| %>
          <li class="accordion-navigation" style="border-style: solid;border-color:#DDDDDD;border-width:2px">
            <a href="#panel<%= category.id %>d" class="skill-panel"
              role="tab" id="panel<%= category.id %>d-heading"
              aria-controls="panel<%= category.id %>d"></a>
            <div id="panel<%= category.id %>d" class="content circle"
              role="tabpanel" aria-labelledby="panel<%= category.id %>d-heading">
              <ul class="small-block-grid-4">
                <% category.skills.each do |skill| %>
                <li class="skill-item">
                  <a href="#" class="a-skill" style="color:#333333; font-size:12pt"
                  user-id="<%= current_user.id %>"
                    skill-id="<%= skill.id %>"
                    id="skill-check-<%= skill.id %>"><%= skill.name %></a>
                </li>
                <% end %>
              </ul>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
