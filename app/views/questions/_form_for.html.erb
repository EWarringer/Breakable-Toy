<%= form_for @question do |f| %>
  <%= render "layouts/form_errors", object: f.object %>

  <div class="small-12 medium-7 column">
    <%= f.label :Question %>
    <%= f.text_field :body %>
  </div>

  <div class="small-12 medium-3 column panel" style="margin-left:10px">
    <a href="#" data-reveal-id="myModal">Click Me For A Modal</a>
    <div id="myModal" class="reveal-modal" data-reveal style="display: block; opacity: 1; visibility: hidden; top: 88px;">

      <div class="small-3 column">
        <div class="side-bar" style="text-align:center;">
          <img id="fl-img-sidebar" src="http://i.imgur.com/SjSTIWz.png" alt="freeLanswers" style="width:250px;height:70px;">
          <div style="margin-left: 0px; padding-top: 20px; font-size: 20pt;">
            <%= link_to "Home", root_path, {style: 'color: black; border-bottom-style: solid; border-bottom-width: 1px;'} %>  |
            <%= link_to "Profile", user_path(current_user.id), {style:'color: black; border-bottom-style: solid; border-bottom-width: 1px;'} %>
          </div>
        </div>
        <div class="side-bar" id="ajax-call">
          <section class="block-list">
            <header>Your Skills</header>
            <ul id="ajax-list" style="font-size: 16pt">
              <% @questionskills.each do |questionskill| %>
              <li><%= questionsskill.skill.name %></li>
              <% end %>
            </ul>
          </section>
        </div>
      </div>

      <div class="small-9 column">
        <div class="row">
          <div class="background-box left-margin">
            <h3 class="skill-select" style="margin-bottom: 30px;">Select your skills below</h3>
            <ul class="accordion" data-accordion role="tablist">
              <% @categories.each do |category| %>
                <li class="accordion-navigation">
                  <a href="#panel<%= category.id %>d" class="skill-panel" role="tab" id="panel<%= category.id %>d-heading" aria-controls="panel<%= category.id %>d"><%= category.name %></a>
                  <div id="panel<%= category.id %>d" class="content circle" role="tabpanel" aria-labelledby="panel<%= category.id %>d-heading">
                    <ul class="small-block-grid-4">
                      <% category.skills.each do |skill| %>
                      <li class="skill-item">
                        <a href="#" class="a-skill" style="font-size:12pt" user-id="<%= current_user.id %>"
                          skill-id="<%= skill.id %>"
                          id="skill-check-<%= skill.id %>"><%= skill.name %></a>
                      </li>
                      <% end %>
                    </ul>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>

      <a class="close-reveal-modal">Ã—</a>
    </div>
  </div>


  <div class="small-12 column">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 10 %>
    <%= f.submit "Submit", class: "button radius" %>
  </div>

<% end %>
