<div class="small-12 column background-box">
  <div class="small-12 large-4 left">
    <h1> <%= current_user.username %>  </h1>
    <div class="real-name">Name: <%= current_user.first_name %> <%= current_user.last_name %></div>
    <div class="user-email">Email: <%= current_user.email %></div>
  </div>
  <div class="charts block small-12 large-8 right">
    <ul class="tabs" data-tab role="tablist">
      <li class="tab-title active" role="presentation"><a href="#panel2-1" role="tab" tabindex="0" aria-selected="true" aria-controls="panel2-1">Monthly</a></li>
      <li class="tab-title" role="presentation"><a href="#panel2-2" role="tab" tabindex="0" aria-selected="false" aria-controls="panel2-2">Pie</a></li>
    </ul>
    <div class="tabs-content">
      <section role="tabpanel" aria-hidden="false" class="content active" id="panel2-1">
        <div id="container" style=" height: 300px; margin: 0 auto"></div>
      </section>
      <section role="tabpanel" aria-hidden="true" class="content" id="panel2-2">
        <div id="pieContainer" style="height: 300px; margin: 0 auto"></div>
      </section>
    </div>
  </div>
</div>
