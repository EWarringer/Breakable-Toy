<div class="small-12 column background-box">
  <% if user_signed_in? %>
  <%= link_to "Profile", user_path(current_user.id), class: "small button radius right" %>
  <% end %>
  <div class="row">
    <div class="small-centered">
      <img src="http://i.imgur.com/SjSTIWz.png" alt="freeLanswers" style="width:250px;height:74px;">
    </div>
  </div>
</div>
<div class="small-12 column background-box">
  <ul class="accordion" data-accordion role="tablist">
    <% @categories.each do |category| %>
      <li class="accordion-navigation">
        <a href="#panel<%= category.id %>d" role="tab" id="panel<%= category.id %>d-heading" aria-controls="panel<%= category.id %>d"><%= category.name %></a>
        <div id="panel<%= category.id %>d" class="content circle" role="tabpanel" aria-labelledby="panel<%= category.id %>d-heading">
          <ul class="small-block-grid-4">
            <% category.skills.each do |skill| %>
            <li class="skill-list"><%= skill.name %></li>
            <% end %>
          </ul>
        </div>
      </li>
    <% end %>
  </ul>
</div>
