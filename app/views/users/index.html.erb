<div class="small-12 column background-box">
  <h1>All users</h1>
  <% @users.each do |user| %>
    <% if user == current_user %>
      <% sum = 0 %>
      <% user.user_skills.each { |x| sum += x.endorsements.count} %>
      <li><%= link_to "#{user.username} (you!)", user_path(user) %> | endorsed <%= sum %> times for <%= user.user_skills.count %> skills </li>
    <% else %>
      <% sum = 0 %>
      <% user.user_skills.each { |x| sum += x.endorsements.count} %>
      <li><%= link_to user.username, user_path(user) %> | endorsed <%= sum %> times for <%= user.user_skills.count %> skills </li>
    <% end %>
  <% end %>
</div>
